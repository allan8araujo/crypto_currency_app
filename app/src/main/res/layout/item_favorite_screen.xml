<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="193dp"
        android:layout_height="match_parent"
        android:background="@color/app_black_background"
        android:padding="8dp"
        android:paddingHorizontal="32dp">

        <ImageView
            android:id="@+id/img_bottom_imageView"
            android:layout_width="160dp"
            android:layout_height="121dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_favorite_item"
            android:contentDescription="@string/imagem_de_fundo_do_item_favorite_screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_bitcoin_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/app_yellow_background"
            android:contentDescription="@string/escrita_da_moeda_bitcoin_do_item_favorite_screen"
            android:fontFamily="@font/roboto"
            android:text="@string/bitcoin"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btc_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/app_yellow_background"
            android:contentDescription="@string/sigla_do_bitcoin_do_item_favorite_screen"
            android:fontFamily="@font/roboto"
            android:text="@string/btc"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_bitcoin_textView" />

        <ImageView
            android:id="@+id/img_coin_imageView"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/icone_da_moeda_do_item_favorite"
            android:src="@drawable/ic_coin_base"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/price_bit_coin_textView"
            android:contentDescription="@string/valor_do_item_favorite_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/app_yellow_background"
            android:fontFamily="@font/roboto"
            android:text="@string/_31_010_20"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btc_textView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>